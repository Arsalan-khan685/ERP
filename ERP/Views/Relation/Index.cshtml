@model IEnumerable<ERP.Models.Relation>

    @{
        ViewData["Title"] = "Index";
    }


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-md-6">
                <h3 class="text-primary">Relations</h3>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Relation" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i>&nbsp; Create New Relation
                </a>
            </div>
        </div>
        <br />

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.RelationName)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RelationName)</td>
                        <td>
                            <a asp-area="" asp-controller="Relation" asp-action="Edit" asp-route-id="@item.RelationId" class="btn btn-info">Edit</a>
                            <a href="#" onclick="ConfirmDelete(@item.RelationId)" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <script>
        function ConfirmDelete(Relationid) {
            if (confirm('Are you sure to delete this Relation?')) {
                window.location.href = '/Relation/Delete/' + Relationid;
            }
        }
    </script>
