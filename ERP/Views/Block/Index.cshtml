@model IEnumerable<ERP.Models.Block>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h3 class="text-primary">Block List </h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Block" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>&nbsp; Create New Block
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped">
    <thead>
        <tr>          
            <th>@Html.DisplayNameFor(model => model.BlockName)</th>           
            <th>Sector Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>        
                <td>
                    @Html.DisplayFor(modelItem => item.BlockName)
                    @*@item.BlockName*@         @* // This type is also used to acces model element*@
                </td>            
                <td>
                    @* @Html.DisplayTextFor(modelItem => item.Sectors.SectorName)*@
                    @item.Sectors?.SectorName
                </td>
                <td>
                    <a asp-controller="Block" asp-action="Edit" asp-route-id="@item.BlockId" class="btn btn-info">Edit</a>
                    <a href="#" onclick="confirmDelete(@item.BlockId)" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<script>   
    function confirmDelete(BlockId) {
        if (confirm('Are you sure you want to delete this Block?')) {           
            window.location.href = '/Block/Delete/' + BlockId;
        }
    }
</script>