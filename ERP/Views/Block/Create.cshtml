@model ERP.Models.Block

@{
    ViewData["Title"] = "Create";
}

<h3>Create Block</h3>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Sector_Id" class="control-label">Sector</label>
                    <select asp-for="Sector_Id" asp-items="@ViewBag.SectorsList" class="form-control">
                        <option value="">-- Select Sector --</option>
                    </select>
                    <span asp-validation-for="Sector_Id" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BlockName" class="control-label"></label>
                    <input asp-for="BlockName" class="form-control" />
                    <span asp-validation-for="BlockName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group pt-md-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
