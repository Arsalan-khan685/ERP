@model IEnumerable<ERP.Models.Street>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-md-6">
            <h3 class="text-primary">Street List </h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Street" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>&nbsp; Create New Street
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped">
    <thead>
        <tr>           
            <th>@Html.DisplayNameFor(model => model.StreetName)</th>            
            <th>Block</th>
            <th>Sector</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>           
                <td>@Html.DisplayFor(modelItem => item.StreetName)</td>            
                <td>@item.Blocks?.BlockName</td>
                <td>@item.Blocks?.Sectors?.SectorName</td>
                <td>
                    <a asp-controller="Street" asp-action="Edit" asp-route-id="@item.StreetId" class="btn btn-info">Edit</a>
                    <a href="#" onclick="confirmDelete(@item.StreetId)" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

<script>
    function confirmDelete(StreetId) {
        if (confirm('Are you sure you want to delete this Street?')) {
            window.location.href = '/Street/Delete/' + StreetId;
        }
    }
</script>